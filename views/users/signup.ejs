<% layout("/layouts/boilerplate") -%>
<div class="row">
    <h1 class="col-6 offset-3">SignUp for WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="form-group mt-3 mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group mt-3 mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" aria-describedby="emailHelp" name="username" required>
            <div class="valid-feedback">Looks good!</div>
              </div>
            <div class="form-group mt-3 mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group form-check mt-3 mb-2">
              <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
              <label class="form-check-label" for="exampleCheck1">Read & Agree to Terms</label>
            </div>
            <button type="submit" class="btn btn-primary mt-3">SignUp</button>
        </form>
    </div>
</div>