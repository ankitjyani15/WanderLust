<% layout("/layouts/boilerplate") -%>
<div class="row">
    <h1 class="col-6 offset-3">Login for WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="form-group mt-3 mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" aria-describedby="emailHelp" name="username" required>
            <div class="invalid-feedback">Enter correct Username</div>
              </div>
            <div class="form-group mt-3 mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
              <div class="invalid-feedback">Enter correct Password</div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Login</button>
        </form>
    </div>
</div>